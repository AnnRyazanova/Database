<fx:root hgap="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" type="GridPane" vgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <columnConstraints>
    <ColumnConstraints hgrow="NEVER" maxWidth="-Infinity" minWidth="-Infinity" />
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TableView fx:id="goodsTable" prefHeight="300.0" GridPane.columnSpan="2">
         <columns>
            <TableColumn editable="false" prefWidth="164.0" resizable="false" text="Название">
                <cellValueFactory>
                    <PropertyValueFactory property="nomenclature" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn editable="false" prefWidth="71.0" resizable="false" text="Единицы">
                <cellValueFactory>
                    <PropertyValueFactory property="measure" />
                </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
      <Label text="Название" GridPane.rowIndex="1" />
      <Label text="Единицы" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="nomenclature" promptText="Яблоки" GridPane.rowIndex="2" />
      <TextField fx:id="measure" promptText="кг" GridPane.columnIndex="1" GridPane.rowIndex="2" />
